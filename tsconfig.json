{
    "compilerOptions": {
        "incremental": true,
        "target": "es6",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "types": ["node"],
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "@types"],
    "exclude": ["src/old", "src/demo"]
}
